<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:FaceIdentifier"
             x:Class="FaceIdentifier.MainPage">

    <StackLayout>
        <Button x:Name="btnTakePhoto" Text="Take Photo" BackgroundColor="Gainsboro" TextColor="White" Clicked="btnTakePhoto_Clicked" />
        <Button x:Name="btnPickPhoto" Text="Pick Photo" BackgroundColor="AliceBlue" TextColor="White" Clicked="btnPickPhoto_Clicked" />

        <Image x:Name="imgPhotoToIdentify" HeightRequest="300" />

        <Button x:Name="btnIdentifyPhoto" Text="Identify Photo" BackgroundColor="BlanchedAlmond" TextColor="White" Clicked="btnIdentifyPhoto_Clicked" />

    </StackLayout>

</ContentPage>
